<CoinTossBoxLayout>:
    orientation: 'vertical'
    Label:
        text: "Take a Guess: Heads or Tails?"
        font_size: 50
        text_size: self.size
        halign: 'center'
        valign: 'middle'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Heads'
            on_release: root.get_random()
        Button:
            text: 'Tails'
            on_release: root.choice('Nope, try again!')
    Label:
        id: result
        font_size: 40
        text: ''
    Button:
        text: 'Start Over'
        on_press: root.clear()